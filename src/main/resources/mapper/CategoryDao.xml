<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springdemo.dao.CategoryDao">
    <!-- 目的：为dao接口方法提供sql语句配置 -->
    <select id="getCategoryById" resultType="Category" parameterType="String">
        <!-- 具体的sql -->
        SELECT
        id,
        name
        FROM
        n_category
        WHERE
        id = #{categoryId}
    </select>

    <select id="getAllCategories" resultType="Category">
        SELECT
        id,
        name
        FROM
        n_category
        ORDER BY
        id
        LIMIT #{offset}, #{limit}
    </select>
</mapper>